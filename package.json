{
  "name": "vue-threejs-composer",
  "version": "0.4.0",
  "main": "build/src/index.js",
  "typings": "build/src/index.d.ts",
  "repository": "https://github.com/sascha245/vue-threejs-composer",
  "license": "MIT",
  "keywords": [
    "vue",
    "threejs",
    "webgl"
  ],
  "scripts": {
    "serve": "vue-cli-service serve ./samples/main.ts",
    "build": "tsc -p tsconfig.prod.json",
    "lint": "vue-cli-service lint",
    "test:unit": "vue-cli-service test:unit",
    "validate": "npm run build && npm run test:unit && npm pack --dry-run"
  },
  "dependencies": {
    "events": "^3.0.0",
    "vue-class-component": "^6.0.0",
    "vue-property-decorator": "^7.0.0"
  },
  "devDependencies": {
    "@types/events": "^1.2.0",
    "@types/jest": "^23.1.4",
    "@types/three": "^0.92.24",
    "@vue/cli-plugin-babel": "^3.0.4",
    "@vue/cli-plugin-typescript": "^3.0.4",
    "@vue/cli-plugin-unit-jest": "^3.0.4",
    "@vue/cli-service": "^3.0.4",
    "@vue/test-utils": "^1.0.0-beta.20",
    "babel-core": "7.0.0-bridge.0",
    "lint-staged": "^7.2.2",
    "three": "^0.97.0",
    "ts-jest": "^23.0.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.0",
    "vue": "^2.5.17",
    "vue-router": "^3.0.1",
    "vue-template-compiler": "^2.5.17"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "peerDependencies": {
    "three": "^0.97.0",
    "vue": "^2.5.17"
  }
}
